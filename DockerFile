# -------------------------------
# Build Stage
# -------------------------------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file & restore dependencies (faster rebuilds)
COPY ["PbSystem.csproj", "./"]
RUN dotnet restore "PbSystem.csproj"

# Copy all files and publish
COPY . .
RUN dotnet publish "PbSystem.csproj" -c Release -o /app/publish /p:UseAppHost=false

# -------------------------------
# Runtime Stage
# -------------------------------
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app/publish .

# Expose port (Railway uses PORT env var)
EXPOSE 8080

# Run the API
ENTRYPOINT ["dotnet", "PbSystem.dll"]

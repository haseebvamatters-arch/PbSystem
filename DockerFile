# -------------------------------
# Build Stage
# -------------------------------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy the project file and restore dependencies (fast layer)
COPY ["PbSystem/PbSystem.csproj", "PbSystem/"]
RUN dotnet restore "PbSystem/PbSystem.csproj"

# Copy everything and publish
COPY . .
RUN dotnet publish "PbSystem/PbSystem.csproj" -c Release -o /app/publish /p:UseAppHost=false

# -------------------------------
# Runtime Stage
# -------------------------------
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app/publish .

# Railway uses PORT env var; expose the default for readability
EXPOSE 8080

# Start the app (replace PbSystem.dll if your assembly name differs)
ENTRYPOINT ["dotnet", "PbSystem.dll"]
